<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
 
 <beans>
	<bean id="contextDao" class="org.springframework.context.support.ClassPathXmlApplicationContext">
     <constructor-arg>
        <list>
            <value>spring-dao.xml</value>
        </list>
     </constructor-arg>
 	</bean>
 	<bean id="beansDao" class="org.springframework.context.support.ClassPathXmlApplicationContext">
     <constructor-arg>
        <list>
            <value>spring-daoBeans.xml</value>
        </list>
     </constructor-arg>
 	</bean>
 </beans>
 