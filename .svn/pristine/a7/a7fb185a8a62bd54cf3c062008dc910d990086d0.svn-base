.weatherFeed {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 90%;
	margin: 2em 3em;
	width: 300px;
	color: #ccc;
}
.weatherFeed a { color: #888; }
.weatherFeed a:hover {
	color: #eee;
	text-decoration: none;
}
.weatherItem {
	padding: 0.8em;
	text-align: right;
}
.weatherCity {font-size: 1.5em; text-transform: uppercase; color: #000; }
.weatherTemp {
	font-size: 4em;
	font-weight: bold;
	color: #4c4c4c;
}
.weatherDesc, .weatherCity { font-weight: bold; }
.weatherDesc { margin-bottom: 0.4em; color: #808080; }
.weatherRange, .weatherWind { font-size: 1em; color: #b3b3b3; }
.weatherLink {
	margin-top: 6px;
	text-align: left;
	font-size: 0.8em;
}

.vertical {  
	position:relative;
	overflow:hidden;	
	height: 160px;	 
	width: 280px;
	border: 4px solid #555;
	background: #222 url('bg.jpg') repeat-x;
}

.items {
	position:absolute;
	height:20000em;	
	margin: 0px;
}
.items div.weatherItem { height: 200px; }
